{% extends 'base.html.twig' %}

{% block title %}Hello OuvrageController!{% endblock %}

{% block body %}
<h1>Liste des ouvrages</h1>

<table>
    <thead>
        <tr>
            <th>Titre</th>
            <th>Auteur(s)</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        {% for ouvrage in ouvrages %}
            <tr>
                <td>{{ ouvrage.titre }}</td>

                <td>
                    {% for auteur in ouvrage.auteurs %}
                        {{ auteur.nom }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>

                <td>
                    <a href="{{ path('app_reserver_ouvrage', { id: ouvrage.id }) }}"
                       class="btn btn-primary">
                        RÃ©server
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
